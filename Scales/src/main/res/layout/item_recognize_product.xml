<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2.3">

        <TextView
            android:id="@+id/item_recognize_product_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:autoSizeMaxTextSize="@dimen/pluTextSize"
            android:autoSizeMinTextSize="@dimen/pluMinTextSize"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/pluTextSize"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="@dimen/pluTextSize"
            app:autoSizeMinTextSize="@dimen/pluMinTextSize"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/item_recognize_product_score"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/managerCategoryTextSize"
            android:textStyle="normal"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
