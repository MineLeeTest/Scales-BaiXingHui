<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#1e2a35"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/test_key_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="小键盘键值"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/test_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="重量"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="22sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_btn_white"
        android:onClick="onPrintTestClick"
        android:text="打印测试"
        android:textColor="@android:color/black"
        android:textSize="22sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_btn_white"
        android:onClick="onOpenBoxTestClick"
        android:text="钱箱测试"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="normal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_btn_white"
        android:onClick="onMiscTestClick"
        android:text="蜂鸣器测试"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_white"
            android:onClick="onReadCardTestClick"
            android:text="读卡测试"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="normal" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_white"
            android:onClick="onVoiceTestClick"
            android:text="喇叭测试"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="normal" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_btn_red"
        android:onClick="onBackClick"
        android:text="退出测试"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="normal"/>

</LinearLayout>