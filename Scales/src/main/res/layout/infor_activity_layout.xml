<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black"
              android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/info_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/orderdetail_textcolor"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/orderdetail_textcolor"
        app:tabTextAppearance="@style/Base.TextAppearance.AppCompat.Large"
        app:tabTextColor="@color/white">

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="基本信息"/>

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="终端信息"/>

    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:id="@+id/info_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>