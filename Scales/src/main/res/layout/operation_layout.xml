<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0px"
            android:layout_height="@dimen/settingButtonHeight"
            android:layout_weight="0.5"
            android:background="@drawable/selector"
            android:text="@string/test_toOpration"
            android:textColor="@drawable/tv_selector"
            android:textSize="@dimen/managerTipTextSize"/>

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0px"
            android:layout_height="@dimen/settingButtonHeight"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/selector"
            android:text="@string/test_toSetting"
            android:textColor="@drawable/tv_selector"
            android:textSize="@dimen/managerTipTextSize"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_9"
            android:layout_width="0px"
            android:layout_height="@dimen/settingButtonHeight"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:text="@string/test_manager"
            android:textColor="@drawable/tv_selector"
            android:textSize="@dimen/managerTipTextSize"/>

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0px"
            android:layout_height="@dimen/settingButtonHeight"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:text="@string/test_network"
            android:textColor="@drawable/tv_selector"
            android:textSize="@dimen/managerTipTextSize"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0px"
            android:layout_height="@dimen/settingButtonHeight"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:text="@string/test_clear"
            android:onClick="projectResetClick"
            android:textColor="@drawable/tv_selector"
            android:textSize="@dimen/managerTipTextSize"/>

        <Button
            android:id="@+id/btn_8"
            android:layout_width="0px"
            android:layout_height="@dimen/settingButtonHeight"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:text="@string/test_clear_calibration"
            android:textColor="@drawable/tv_selector"
            android:textSize="@dimen/managerTipTextSize"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0px"
            android:layout_height="@dimen/settingButtonHeight"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:onClick="pushNVBitmap"
            android:text="@string/push_logo"
            android:textColor="@drawable/tv_selector"
            android:textSize="@dimen/managerTipTextSize"/>

        <Button
            android:layout_width="0px"
            android:layout_height="@dimen/settingButtonHeight"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:onClick="printNVBitmap"
            android:text="@string/print_logo"
            android:textColor="@drawable/tv_selector"
            android:textSize="@dimen/managerTipTextSize"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_5"
            android:layout_width="0px"
            android:layout_height="@dimen/settingButtonHeight"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:text="@string/test_exit"
            android:textColor="@drawable/tv_selector"
            android:textSize="@dimen/managerTipTextSize"/>

        <Button
            android:id="@+id/btn_6"
            android:layout_width="0px"
            android:layout_height="@dimen/settingButtonHeight"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_press_red"
            android:text="@string/operation_back"
            android:textColor="@color/white"
            android:textSize="@dimen/managerTipTextSize"/>

    </LinearLayout>

</LinearLayout>