<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="65dp"
              android:background="@color/white"
              android:clickable="true"
              android:focusable="true"
              android:minHeight="60dp">

    <TextView
        android:id="@+id/total_list_item_delete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/totalpage_red"
        android:textSize="@dimen/configTextSize"/>

    <TextView
        android:id="@+id/total_list_item_productName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:autoSizeMaxTextSize="@dimen/configTextSize"
        android:autoSizeMinTextSize="@dimen/pluMinTextSize"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:textColor="@color/black1"
        android:textSize="@dimen/configTextSize"
        app:autoSizeMaxTextSize="@dimen/configTextSize"
        app:autoSizeMinTextSize="@dimen/pluMinTextSize"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"/>

    <TextView
        android:id="@+id/total_list_item_productPrice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:textColor="@color/black1"
        android:textSize="@dimen/configTextSize"/>

    <TextView
        android:id="@+id/total_list_item_productWeight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:textColor="@color/black1"
        android:textSize="@dimen/configTextSize"/>

    <TextView
        android:id="@+id/total_list_item_productMoney"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:textColor="@color/black1"
        android:textSize="@dimen/configTextSize"/>

</LinearLayout>